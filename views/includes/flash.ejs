<% if(success && success.length) { %>
<div class="alert mt-3 alert-primary alert-dismissible fade show success" role="alert">
    <%= success %>
    <button 
       type="button" 
       class="btn-close" 
       data-bs-dismiss="alert" 
       aria-label="Close">
    </button>
  </div>
  <% } %>

  <% if(error && error.length) { %>
   <div class="alert mt-3 alert-danger
    alert-dismissible fade show success" role="alert">
       <%= error %>
       <button 
          type="button" 
          class="btn-close" 
          data-bs-dismiss="alert" 
          aria-label="Close">
       </button>
     </div>
     <% } %>