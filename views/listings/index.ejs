<%- layout("/layouts/basic.ejs") -%> 
  <body>
    <style>
      #filters{
        /* margin-top: 1rem;
        margin-bottom: 1rem; */
        display: flex;
      }
    
      .filter{
        text-align: center;
        margin-right: 2rem;
        margin-top: 1rem;
        opacity: 0.7;
        cursor: context-menu;
      }

      .filter:hover{
        opacity: 1;
      }

      .filter1{
        text-decoration: none;
        color: black;
        font-weight: bold;
      }

      .tax-info{
        display: none;
      }
      .tax-toggle{
        border: 2px solid black;
        border-radius: 1rem;
        height: 3rem;
        padding: 1rem;
        margin-left: 5rem;
        margin-bottom: 1rem;
        margin-top: 1rem;
        display: flex;
        align-items: center;
        width: 11rem;
        font-size: small;
        font-weight: 800;
      }

      #fill{
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
      }

      #flexSwitchCheckDefault{
        color: black;
      }


    </style>

  <div id="fill">
    <div id="filters">
      <div class="filter">
        <a class="filter1" href="/listings/filter?category=trending"><span class="material-icons">
          trending_up
          </span>
          <p>Trending</p></a>
      </div>

      <div class="filter">
        <a class="filter1" href="/listings/filter?category=car"><div><span class="material-icons">
          local_taxi
          </span></div>
        <p>Cars</p></a>
      </div>

        <div class="filter">
          <a class="filter1" href="/listings/filter?category=bike"><div><span class="material-icons">
            motorcycle
            </span></div>
          <p>Bikes</p></a>
        </div>

        <div class="filter">
          <a class="filter1" href="/listings/filter?category=electric_car"><div><span class="material-icons">
            electric_car
            </span></div>
            <p>Electric</p></a>
          </div>

          <div class="filter">
            <a class="filter1" href="/listings/filter?category=electric_bike"><div><span class="material-icons">
              electric_bike
              </span></div>
              <p>Electric</p></a>
          </div>
    </div>  

          <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
              <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
              <label class="form-check-label" for="flexbSwitchCheckDefault">Total after Taxes</label>
            </div>
          </div>        

</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% if (allListings.length === 0) { %>
    <p>No listings match the selected category.</p>
  <% } else { %>
    <% for (let listing of allListings) { %>
      <div class="card listing-card">
        <a href="/listings/<%= listing._id %>" class="links">
          <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="listing_image" 
            style="height: 20rem;" />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <b><%= listing.vname %></b>
            <%= listing.cost %>/day
            <i class="tax-info">&nbsp;&nbsp; +18% GST</i>
          </div>
        </a>
      </div>
    <% } %>
  <% } %>
</div>
  </body>


  <script>
    let taxSwitch = document.getElementById('flexSwitchCheckDefault');
    taxSwitch.addEventListener('click', ()=>{
      let taxInfo= document.getElementsByClassName('tax-info');
      for (info of taxInfo){
        if(info.style.display != "inline"){
          info.style.display = "inline";
        } else {
          info.style.display = "none";
        }
      }
    })
  </script>